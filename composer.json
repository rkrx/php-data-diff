{
	"name": "rkr/data-diff",
	"description": "A handy tool for comparing structured data quickly in a key-value manner",
	"license": "MIT",
	"homepage": "https://github.com/rkrx/php-data-diff",
	"require": {
		"php": ">= 8.1",

		"ext-pdo": "*",
		"ext-pdo_sqlite": "*",
		"ext-json": "*",
		"ext-mbstring": "*",

		"rkr/phpstan-extensions": "^1.0.0"
	},
	"require-dev": {
		"phpstan/extension-installer": "^1.4",
		"phpstan/phpstan": ">= 0.1",
		"phpunit/phpunit": "^10.0"
	},
	"suggest": {
		"rkr/data-diff-helpers": "Some Helpers for rkr/data-diff"
	},
	"autoload": {
		"psr-4": {
			"DataDiff\\": ["src/"]
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DataDiff\\": ["src/", "tests/"]
		}
	},
	"scripts": {
		"phpstan": "phpstan analyse -c phpstan.neon",
		"test": "phpunit -c tests.xml"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		}
	}
}
